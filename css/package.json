{
  "name": "css",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "compile:tailwind": "pnpm dlx tailwindcss -i ./.storybook/storybook.css -o ./.storybook/tailwind.css",
    "compile:tailwind:watch": "pnpm dlx tailwindcss -i ./src/index.css -o ./src/index-compiled.css --watch",
    "compile:css": "postcss src/**/*.css --dir build/css",
    "compile:css:watch": "onchange \"src/**/*.css\" -- pnpm compile:css",
    "transpile:css": "(cd build/css && prejss-cli *.css --out-dir ../jss --format commonjs);",
    "transpile:css:watch": "onchange \"build/css/*.css\" -- pnpm transpile:css",
    "writeindex": "node scripts/write-index",
    "writeindex:watch": "onchange \"build/jss/*.{js,jsx,ts,tsx}\" -- pnpm writeindex",
    "build": "pnpm compile && pnpm transpile && pnpm writeindex",
    "build:watch": "onchange \"src/**/*.css\" -- pnpm build",
    "storybook": "storybook dev -p 4242 --disable-telemetry",
    "storybook:watch": "concurrently \"compile:tailwind:watch\" \"pnpm storybook\"",
    "dev": "concurrently \"pnpm build:watch\" \"pnpm storybook:watch\" -n build,storybook -c cyan,magenta"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@storybook/addon-essentials": "7.4.0",
    "@storybook/addon-interactions": "7.4.0",
    "@storybook/addon-links": "7.4.0",
    "@storybook/blocks": "7.4.0",
    "@storybook/html": "7.4.0",
    "@storybook/html-vite": "7.4.0",
    "@storybook/testing-library": "0.2.0",
    "autoprefixer": "^10.4.15",
    "concurrently": "^8.2.1",
    "onchange": "^7.1.0",
    "postcss": "^8.4.29",
    "postcss-apply": "^0.12.0",
    "postcss-cli": "^10.1.0",
    "postcss-discard-comments": "^6.0.0",
    "postcss-each": "^1.1.0",
    "postcss-minify": "^1.1.0",
    "postcss-nested": "^6.0.1",
    "prejss-cli": "^0.3.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "storybook": "7.4.0",
    "tailwindcss": "^3.3.3",
    "vite": "^4.4.9"
  }
}
